<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContactProfile"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the contact profile"
       />

    <TextView
        android:id="@+id/txtview_name_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:" />

    <TextView
        android:id="@+id/name_forShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:text=""/>

    <TextView
        android:id="@+id/txtview_phoneNum_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number:" />

    <TextView
        android:id="@+id/phone_forShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:text=""/>

    <TextView
        android:id="@+id/txt_relationship_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relationship:" />


    <!--Connect an arraylist to this listview using intent in main class-->
    <!--build an exclusive xml for relationship list-->
    <ListView
        android:id="@+id/list_relatioship_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"/>

</androidx.appcompat.widget.LinearLayoutCompat>